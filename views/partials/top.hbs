<header class="bg-gradient-primary text-white py-4 shadow-sm d-flex justify-content-between">
  <div class="d-flex justify-content-between align-items-center flex-wrap">
    <h1 class="h3 mb-0 fw-bold"><i class="fa-solid fa-money-check-dollar"></i>{{l.menuExpenseManagement}}</h1>
  </div>
  <div class="d-flex">
    <div class="dropdown me-3">
      <a class="btn btn-sm btn-light dropdown-toggle" href="#" role="button" id="langDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        🌐 {{#if (eq user.lang "vi")}}Tiếng Việt{{else}}English{{/if}}
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
        <li><a class="dropdown-item" href="?lang=vi">🇻🇳 Tiếng Việt</a></li>
        <li><a class="dropdown-item" href="?lang=en">🇬🇧 English</a></li>
      </ul>
    </div>
      {{#if user}}
        <ul class="navbar-nav me-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                    <img class="rounded-circle" width="30px" src="{{ user.avatar }}" alt=""> {{user.name}}
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><span class="dropdown-item-text"><small>Role: {{user.role.name}}</small></span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> {{l.logout}}</a></li>
                </ul>
            </li>
        </ul>
      {{/if}}
  </div>
</header>
